{
  "name": "deprecate-module",
  "displayName": "deprecate-module",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deprecate-module.deprecateFile",
        "title": "Deprecate module"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "deprecate-module.deprecateFile",
          "group": "1_modification",
          "when": "!explorerResourceIsFolder && resourceScheme == file && (resourceExtname == .ex || resourceFilename =~ /_test\\.exs$/)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/szajbus/vs-code-deprecate-module.git"
  },
  "publisher": "szajbus"
}
